# Youzan API credentials (server-side only)
YOUZAN_CLIENT_ID=
YOUZAN_CLIENT_SECRET=
YOUZAN_AUTHORIZE_TYPE=silent
YOUZAN_GRANT_ID=

# Backend endpoint that returns product list (server will call this)
# Example: https://open.youzanyun.com/api/youzan.item.search/3.0.0
YOUZAN_PRODUCTS_ENDPOINT="https://open.youzanyun.com/api/youzan.item.search/3.0.0"

# Auth style: header | query
YOUZAN_AUTH_STYLE=query

# HTTP method for products endpoint
YOUZAN_HTTP_METHOD=POST

# Optional request payload for products endpoint (JSON string)
YOUZAN_PRODUCTS_PAYLOAD_JSON='{"page_no":1,"page_size":20,"show_sold_out":0}'

# Optional server port
PORT=3001

# Sync interval in minutes
SYNC_INTERVAL_MINUTES=30
